<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{this.nome}}</h4>
            <small>Slug: {{this.slug}}</small><br>
            <a href="/admin/categorias/edit/{{this.id}}"><button class="btn btn-success btn-sm mt-4">Editar Categoria</button></a>
        </div>
    </div>
{{else}}
    
{{/each}}
